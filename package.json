{
  "name": "@ctt/apig",
  "version": "0.3.0",
  "description": "A crud-api microservice and endpoint generator",
  "main": "bin/apig",
  "bin": {
    "apig": "bin/apig"
  },
  "scripts": {
    "build": "babel src -d lib --ignore *.test*.js",
    "build:watch": "yarn build --watch",
    "clean": "concurrently 'rimraf node_modules' 'rimraf lib/*' 'yarn cache clean'",
    "lint": "eslint src",
    "prepublish": "yarn build",
    "pretest": "yarn lint",
    "start": "node lib/index.js",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "jest": {
    "testURL": "http://localhost/",
    "roots": [
      "./src/"
    ],
    "testMatch": [
      "**/?(*.)test.js?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/scaffold/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/scaffold/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "babel-polyfill",
      "./jest/consoleErrorsThrowException.js"
    ]
  },
  "directories": {
    "lib": "./lib",
    "bin": "./bin"
  },
  "files": [
    "bin",
    "lib",
    "scaffold"
  ],
  "devDependencies": {
    "babel-cli": "6.4.5",
    "babel-core": "6.4.5",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.2",
    "babel-plugin-transform-class-properties": "6.4.0",
    "babel-plugin-transform-es2015-spread": "6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.20.2",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.3.13",
    "concurrently": "3.5.1",
    "eslint": "5.3.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jest": "21.20.2",
    "jest": "23.5.0",
    "precommit-hook-eslint": "3.0.0"
  },
  "dependencies": {
    "capitalize": "2.0.0",
    "inquirer": "6.2.1",
    "mkdirp": "0.5.1",
    "mustache": "3.0.1",
    "ramda": "0.26.1",
    "rxjs": "6.4.0",
    "scaffold-generator": "2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jabdul/apig.git#master"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "team@craftturf.com",
  "license": "SEE LICENSE IN <LICENSE>"
}
